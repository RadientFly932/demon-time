import pip
pip.main(['install', 'flask'])


from flask import Flask, send_file, abort
import os

app = Flask(__name__)
PORT = 3000
HTML_PATH = "/workspaces/codespaces-blank/Cuphead.html"

@app.route("/")
def serve_html():
    if os.path.exists(HTML_PATH):
        return send_file(HTML_PATH)
    else:
        abort(404, description="HTML file not found.")

# Optionally serve static files from a 'static' directory
@app.route("/static/<path:filename>")
def serve_static(filename):
    static_dir = os.path.join(os.path.dirname(HTML_PATH), "static")
    file_path = os.path.join(static_dir, filename)
    if os.path.exists(file_path):
        return send_file(file_path)
    else:
        abort(404, description="Static file not found.")

if __name__ == "__main__":
    app.run(host="localhost", port=PORT)